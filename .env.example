# EZ Kafka Visualizer Configuration
# Copy this file to .env to customize your deployment

# Application Port Configuration
APP_PORT=3700
HOST_PORT=3700

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=ezkafka-visualizer
KAFKA_CONNECTION_TIMEOUT=3000
KAFKA_REQUEST_TIMEOUT=30000

# For connecting to external Kafka (comment out kafka service in docker-compose.yml)
# KAFKA_BROKERS=localhost:9092
# KAFKA_BROKERS=your-kafka-server:9092

# Kafka Cluster Configuration (when using included Kafka)
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181